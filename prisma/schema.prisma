generator client {
  provider = "prisma-client-js"
  engineType = "js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model DataLog {
  id                Int      @id @default(autoincrement())
  createdAt         DateTime @default(now())
  
  // ESP32 Sensor Data
  voltage           Float
  current           Float
  power             Float
  energy            Float
  water_temperature Float
  humidity          Float
  ph                Float
  nutrient_ppm      Float

  // This explicitly maps your model 'DataLog' to the table 'data_logs'
  @@map("data_logs")
}